    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Knocker Service",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/knocker/knocker.py",
            "args": ["-v"],
            "cwd": "${workspaceFolder}/src",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "controller.controller:api",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/src"
        }
    ]
}